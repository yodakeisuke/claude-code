{
  "description": "AoT Loop plugin hooks for autonomous iteration",
  "hooks": {
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/subagent-stop-hook.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write|Bash|Read|Glob|Grep|Task|WebSearch|WebFetch|KillShell",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/permission-request-hook.sh"
          }
        ]
      }
    ]
  }
}
